               Source="Fruit/Apple.jpg"
               Width="458" Height="271"
               Canvas.Left="324" Canvas.Top="60" RenderTransformOrigin="1,1"/>
        <Button x:Name="changeButton" Width= "124" Height="76"
                Content= "change" Canvas.Left="62" Canvas.Top="255"
